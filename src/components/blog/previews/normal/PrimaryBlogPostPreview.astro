---
import FormattedDate from "../../FormattedDate.astro";

const { post } = Astro.props;
//title, description, pubDate, updatedDate, heroImage
---

<a href={`/blog/${post.id}/`}>
  <div class="flex flex-col justify-between justify-items-stretch">
    <img
      src={post.data.heroImage}
      alt=""
      class="rounded-lg max-w-800px max-h-440px"
    />

    <div>
      <h2 class="text-5xl mt-2 mb-2">{post.data.title}</h2>
      <p class="text-xl text-text-light">
        {post.data.shortDescription || post.data.description}.
      </p>
      <span class="text-gray-500 text-xs">
        <FormattedDate date={post.data.pubDate} />
      </span>
    </div>
  </div>
</a>
