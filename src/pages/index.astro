---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Chip from "../components/Chip.astro";

const categories = [
  "Música",
  "Deporte",
  "Esports",
  "Tecnología",
  "Angioplastía",
  "Juegos",
  "Compras",
  "Experiencias",
];

import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import BlogPostPreview from "../components/BlogPostPreview.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const mainPost = posts[0];
const leftPosts = posts.slice(1, 3);
const rightPosts = posts.slice(3, 5);
---

<!doctype html>
<html lang="en" class="custom-gradient font-nunito">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="h-full">
    <Header />
    <main class="max-w-5xl m-auto main-container flex flex-col content-center justify-items-center pb-80">
      <h1 class="pb-8">Últimas notas</h1>
      <div class="flex row gap-2 mb-8">
        {
          categories.map((categorie) => (
            <Chip label={categorie} checked={false} />
          ))
        }
      </div>
      <div class="grid grid-cols-[200px_minmax(350px,_1fr)_200px] gap-4">
        <div class=" flex flex-col justify-between">
          {leftPosts.map((post, index) => <div><BlogPostPreview post={post}/>{index % 2 === 0 && <hr class="mt-3 border-solid text-gray-300"/>}</div>)}
        </div>
        <div>
          <BlogPostPreview post={mainPost} />
        </div>
        <div class="flex flex-col justify-between">
          {rightPosts.map((post, index) => <div><BlogPostPreview post={post}/>{index % 2 === 0 && <hr class="mt-3 border-solid text-gray-300"/>}</div>)}
        </div>
      </div>
    </main>

    <!-- <Footer /> -->
  </body>
</html>

<style>
  .custom-gradient {
    --tw-gradient-stops: var(--color-base-light), var(--color-neutral-light),
      var(--color-neutral-light), var(--color-base-light);
    background: linear-gradient(75deg, var(--tw-gradient-stops));
  }

  .main-container {
    height: calc(100vh - 50.4px);
  }
</style>
